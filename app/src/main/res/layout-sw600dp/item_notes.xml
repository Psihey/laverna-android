<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_notes"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/im_btn_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/ic_star_border_black_24dp"/>

            <TextView
                android:id="@+id/tv_title_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/im_btn_favorite"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="30dp"
                android:textStyle="bold"
                android:text="@string/title_all_notes"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_date_created_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_below="@+id/tv_title_note"
                android:textSize="12sp"
                android:textColor="@color/colorDateCreatedNote"
                android:text="@string/date_of_created_all_note"/>

            <TextView
                android:id="@+id/tv_prompt_text_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_date_created_note"
                android:layout_below="@+id/tv_title_note"
                android:textSize="12sp"
                android:text="@string/tv_prompt_ext_note"/>

            <TextView
                android:id="@+id/tv_tags1_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"

                android:layout_below="@+id/tv_prompt_text_note"
                android:paddingTop="2dp"
                android:textSize="12sp"
                android:text="#tags1"/>

            <TextView
                android:id="@+id/tv_tags2_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"

                android:layout_toRightOf="@+id/tv_tags1_note"
                android:layout_below="@+id/tv_prompt_text_note"
                android:paddingTop="2dp"
                android:textSize="12sp"
                android:text="#tags2"/>

            <TextView
                android:id="@+id/tv_tags3_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/tv_tags2_note"
                android:layout_below="@+id/tv_prompt_text_note"
                android:paddingTop="2dp"
                android:textSize="12sp"
                android:text="#tags3"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>